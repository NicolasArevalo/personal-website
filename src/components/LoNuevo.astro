<style>
	section {
		max-width: 100%;
		margin: 1rem 0;
		padding: 15px 20px;
		/* 
		background-image: linear-gradient(to top, #f6f0fd 0%, #fbf8ff 100%);
		box-shadow: var(--shadow-buena);
		position: relative; */
	}

	div {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		width: 100%;
		justify-content: space-around;
		margin: 10px 0 10px 0;
	}
	a {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 18px;
		width: 150px;
		background-image: linear-gradient(to top, #f6f0fd 0%, #fbf8ff 100%);
		border-radius: var(--br);
		padding: 20px 20px;
		box-shadow: var(--shadow-buena);
		text-align: center;
		transition: box-shadow var(--transition-time) ease;
	}
	a:hover{
		box-shadow: var(--shadow-buena-hovered);
	}
	a>svg:hover{
		background-color: transparent;
	}
	h5 {
		font-size: large;
		margin-bottom: 0;
		font-weight: semibold;
	}
	@media (max-width: 760px) {
		div {
            gap: 2rem;
			justify-content: center;
		}
		h5 {
			font-size: medium;
		}
	}
	svg {
		transform: scale(2) !important;
	}
</style>
