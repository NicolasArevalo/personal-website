---
import Github from "@components/Logos/Github.astro";
import Twitter from "@components/Logos/Twitter.astro";
import Five from "@components/Logos/5.astro";
const host = ''
---

<script is:inline>
	const fadeOut = () => {
		const loaderWrapper = document.querySelector('.load_wrapper')
		loaderWrapper.classList.add('fade')
	}
	window.addEventListener('load', fadeOut)

</script>

<div class="load_wrapper">
	<div class="load_loader">
		<svg id="load_logo" data-name="Capa 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 280 280">
			<title>Nicolás Arévalo Logo</title>
			<polygon points="92 277 117.5 78.5 163 141.5 186.5 3.5 182 216.5 132 153 92 277" />
		</svg>
		<div class="lds-ellipsis">
			<div></div>
			<div></div>
			<div></div>
			<div></div>
		</div>

	</div>
</div>

<header class="wrapper">
	<article>
		<h1>
			<a href="/">
				<svg id="Capa_1" data-name="Capa 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 280 280">
					<title>Nicolás Arévalo Logo</title>
					<polygon points="92 277 117.5 78.5 163 141.5 186.5 3.5 182 216.5 132 153 92 277" />
				</svg>
			</a>
		</h1>

		<div class="nav__logos">
			<Twitter />
			<Github />
			<Five />
		</div>
		<div class="hamburguer-menu">
			<input type="checkbox" id="menu__toggle">
			<label for="menu__toggle" class="menu__btn">
				<span></span>
			</label>
			<ul class="menu__box">
				<li><a class="menu__item" href={host+'/'}>Inicio</a></li>
				<li><a class="menu__item" href={host+'/blog/'}>Blog</a></li>
				<li><a class="menu__item" href={host+'/sobre-mi/'}>Sobre mí</a></li>
				<li><a class="menu__item" href={host+'/profesional/'}>Profesional</a></li>
				<li><a class="menu__item" href={host+'/voz/'}>Voz</a></li>
				<li><a class="menu__item" href={host+'/contacto/'}>Contacto</a></li>

				<div class="nav__logos fixed">
					<Twitter />
					<Github />
					<Five />
				</div>
			</ul>
		</div>

	</article>
</header>

<style>
	/* LOADER */

	.load_wrapper {
		position: fixed;
		inset: 0;
		z-index: 99;
		background-color: var(--color-white);
		display: grid;
		place-items: center;
		transition: opacity .25s, visibility 1s;
	}

	.fade {
		opacity: 0;
		visibility: hidden;
	}

	.load_loader {
		display: flex;
		flex-direction: column;
		align-items: center;
		
	}

	#load_logo {
		width: 5rem;
		height: 5rem;
	}

	.lds-ellipsis {
		display: inline-block;
		position: relative;
		width: 70px;
		height: 40px;
		position: absolute;
		bottom: 3rem;
		right: 3rem;
	}

	.lds-ellipsis div {
		position: absolute;
		top: 10px;
		width: 9px;
		height: 9px;
		border-radius: 50%;
		background: var(--color-gray-900);
		animation-timing-function: cubic-bezier(0, 1, 1, 0);
	}

	.lds-ellipsis div:nth-child(1) {
		left: 8px;
		animation: lds-ellipsis1 0.6s infinite;
	}

	.lds-ellipsis div:nth-child(2) {
		left: 8px;
		animation: lds-ellipsis2 0.6s infinite;
	}

	.lds-ellipsis div:nth-child(3) {
		left: 32px;
		animation: lds-ellipsis2 0.6s infinite;
	}

	.lds-ellipsis div:nth-child(4) {
		left: 56px;
		animation: lds-ellipsis3 0.6s infinite;
	}

	@keyframes lds-ellipsis1 {
		0% {
			transform: scale(0);
		}

		100% {
			transform: scale(1);
		}
	}

	@keyframes lds-ellipsis3 {
		0% {
			transform: scale(1);
		}

		100% {
			transform: scale(0);
		}
	}

	@keyframes lds-ellipsis2 {
		0% {
			transform: translate(0, 0);
		}

		100% {
			transform: translate(24px, 0);
		}
	}

	@-webkit-keyframes vibrate {
		0% {
			-webkit-transform: translate(0);
			transform: translate(0);
		}

		20% {
			-webkit-transform: translate(-2px, 2px);
			transform: translate(-2px, 2px);
		}

		40% {
			-webkit-transform: translate(-2px, -2px);
			transform: translate(-2px, -2px);
		}

		60% {
			-webkit-transform: translate(2px, 2px);
			transform: translate(2px, 2px);
		}

		80% {
			-webkit-transform: translate(2px, -2px);
			transform: translate(2px, -2px);
		}

		100% {
			-webkit-transform: translate(0);
			transform: translate(0);
		}
	}

	/* HEADER */
	header {
		padding-top: 1rem;
		padding-bottom: 1rem;
		height: 5rem;
	}

	article {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.nav__logos {
		/* padding: 0rem .5rem 0 0; */
		margin-right: .5rem;
	}

	.fixed {
		text-align: center;
		margin-top: 4rem;
	}

	h1 {
		margin: 0;
		font-size: 1.5rem;
		max-width: 100%;
		display: flex;
		flex-grow: 1;
	}


	svg {
		width: 3rem;
		height: 3rem;
	}

	h1 a {
		text-decoration: none;
		display: inline-flex;
	}
	
	li a{
		font-weight: 600;
		border-bottom: 1px solid rgba(var(--color-gray-300), .3);
	}

	#menu__toggle {
		opacity: 0;
	}

	#menu__toggle:checked+.menu__btn>span {
		transform: rotate(45deg);
	}

	#menu__toggle:checked+.menu__btn>span::before {
		top: 0;
		transform: rotate(0deg);
	}

	#menu__toggle:checked+.menu__btn>span::after {
		top: 0;
		transform: rotate(90deg);
	}

	#menu__toggle:checked~.menu__box {
		top: 0;
		opacity: 1 !important;
	}

	.hamburguer-menu {
		display: block;
		width: 30px;
	}

	.menu__btn {
		display: block;
		position: relative;
		width: 100%;
		height: 25px;
		cursor: pointer;
		z-index: 6;
	}

	.menu__btn>span,
	.menu__btn>span::before,
	.menu__btn>span::after {
		display: block;
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 4px;

		border-radius: 16px;
		background-color: var(--color-gray-700);
	}

	.menu__btn>span::before {
		content: '';
		top: -8px;
	}

	.menu__btn>span::after {
		content: '';
		top: 8px;
	}

	.menu__box {
		display: block;
		position: fixed;
		top: -110%;
		right: 0;
		left: 0;
		margin: auto;
		width: 100%;
		height: 100%;
		padding: 80px 0;
		opacity: 0;
		background-color: var(--color-gray-50);
		border-radius: 0 0 0 var(--br);
		transition-duration: .25s;
		z-index: 5;
	}

	.menu__box::before {
		content: '';
		position: absolute;
		top: 3rem;
		right: 0;

		margin: auto;
		width: 63%;
		height: 70%;
		z-index: -1;
		opacity: .1;
		background-image: url('/favicon.svg');
		background-repeat: no-repeat;
	}

	.menu__item {
		display: block;
		padding: 20px 24px;
		color: var(--theme-text);
		font-size: 1.3em;
		font-weight: bold;
		transition-duration: .25s;
		text-align: left;
		width: 80%;
		margin: auto;
		transition: .3s ease;
	}

	.menu__item:hover {
		background: rgb(238, 230, 249);
		background: linear-gradient(90deg, rgba(238, 230, 249, 1) 0%, rgba(238, 230, 249, 1) 5%, rgba(238, 230, 249, .4) 35%, rgba(0, 0, 0, 0) 100%);
	}

	@media (min-width: 860px) {
		h1 {
			flex-grow: 0;
		}

		.hamburguer-menu {
			width: auto;
		}

		#menu__toggle {
			display: none;
		}

		.menu__btn {
			display: none;
		}

		.menu__box {
			display: flex;
			flex-flow: row wrap;
			position: relative;
			top: 0;
			opacity: 1;
			padding: 0;
			font-size: small;
			/* gap: .5rem; */

		}

		li a{
			border-bottom: 0;
		}

		.menu__item {
			padding: 0;
			margin: 0;
			width: auto;
			padding: 3px 12px;
			border-radius: var(--br);
		}

		.menu__item:hover {
			background: var(--hoverchido);
		}

		.nav__logos {
			padding: 0 0 0 0;
			order: 3;
		}

		.fixed {
			display: none;
		}

		.menu__box::before {
			display: none;
		}
	}
</style>