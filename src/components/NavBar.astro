---
import Github from "@components/Logos/Github.astro";
import Twitter from "@components/Logos/Twitter.astro";
import Five from "@components/Logos/5.astro";
const host = 'http://localhost:3000'
---

<header class="wrapper">
	<article>
		<h1>
			<a href="/">
				<svg id="Capa_1" data-name="Capa 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 280 280">
					<title>NAicon</title>
					<polygon points="92 277 117.5 78.5 163 141.5 186.5 3.5 182 216.5 132 153 92 277" />
				</svg>
			</a>
		</h1>

		<div class="nav__logos">
			<Twitter />
			<Github />
			<Five />
		</div>
		<div class="hamburguer-menu">
			<input type="checkbox" id="menu__toggle">
			<label for="menu__toggle" class="menu__btn">
				<span></span>
			</label>
			<ul class="menu__box">
				<li><a class="menu__item" href={host+'/'}>Inicio</a></li>
				<li><a class="menu__item" href={host+'/blog/'}>Blog</a></li>
				<li><a class="menu__item" href={host+'/sobre-mi/'}>Sobre m√≠</a></li>
				<li><a class="menu__item" href={host+'/profesional/'}>Profesional</a></li>
				<li><a class="menu__item" href={host+'/voz/'}>Voz</a></li>
				<li><a class="menu__item" href={host+'/contacto/'}>Contacto</a></li>
			</ul>
		</div>

	</article>
</header>

<style>
	header {
		padding-top: 1rem;
		padding-bottom: 1rem;
		height: 5rem;

	}

	article {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.nav__logos {
		padding: .4rem .5rem 0 0;
	}

	h1 {
		margin: 0;
		font-size: 1.5rem;
		max-width: 100%;
		display: flex;
		flex-grow: 1;
	}

	.logo {
		transform: translateY(0.25rem);
	}

	svg {
		width: 3rem;
		height: 3rem;
	}

	h1 a {
		text-decoration: none;
		display: inline-flex;
	}

	#menu__toggle {
		opacity: 0;
	}

	#menu__toggle:checked+.menu__btn>span {
		transform: rotate(45deg);
	}

	#menu__toggle:checked+.menu__btn>span::before {
		top: 0;
		transform: rotate(0deg);
	}

	#menu__toggle:checked+.menu__btn>span::after {
		top: 0;
		transform: rotate(90deg);
	}

	#menu__toggle:checked~.menu__box {
		top: 0;
		opacity: 1 !important;
	}

	.hamburguer-menu {
		display: block;
		width: 30px;
		/* transform: translateY(-4px); */
	}

	.menu__btn {
		display: block;
		position: relative;
		width: 100%;
		height: 26px;
		cursor: pointer;
		z-index: 6;
		transform: translateY(-4px);
	}

	.menu__btn>span,
	.menu__btn>span::before,
	.menu__btn>span::after {
		display: block;
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 3px;
		background-color: var(--color-gray-700);
	}

	.menu__btn>span::before {
		content: '';
		top: -8px;
	}

	.menu__btn>span::after {
		content: '';
		top: 8px;
	}

	.menu__box {
		display: block;
		position: fixed;
		top: -100%;
		right: 0;
		left: 0;
		margin: auto;
		width: 100%;
		height: 100%;
		padding: 80px 0;
		opacity: 0;
		background-color: var(--color-gray-50);
		border-radius: 0 0 0 var(--br);
		/* box-shadow: -2px 2px 6px rgba(0, 0, 0, .3); */
		transition-duration: .25s;
		z-index: 5;
	}

	.menu__item {
		display: block;
		padding: 20px 24px;
		color: var(--theme-text);
		font-size: 1.3em;
		font-weight: bold;
		transition-duration: .25s;
		text-align: left;
		width: 30%;
		margin: auto;
		border-bottom: var(--border-light);
	}

	.menu__item:hover {
		background-color: rgba(var(--theme-accent-rgb), var(--theme-accent-opacity));
	}

	@media (max-width: 760px) {
		.menu__item {
			width: 80%;
		}

		.nav__logos {
			padding: 0 0 0 0;
		}
	}
</style>