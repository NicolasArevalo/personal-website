---
export interface Props {
	post: any;
}

const { post } = Astro.props;
---

<article class="post-preview">
	<header>
		<p class="publish-date">{post.frontmatter.publishDate}</p>
		<a href={post.url}>
			<h1 class="title">{post.frontmatter.title}</h1>
		</a>
	</header>
	<p>{post.frontmatter.description}</p>
	<a href={post.url}>Leer m√°s</a>
</article>

<style>
	.content :global(main > * + *) {
		margin-top: 1rem;
	}

	.post-preview {
		padding-bottom: 2rem;
		margin-bottom: 1.5rem;
		border-bottom: 3px solid var(--theme-divider);
	}

	.post-preview:last-child{
		border-bottom: none;
	}

	header {
		align-items: flex-start;
		display: flex;
		flex-direction: column;
		justify-content: center;
		padding-bottom: .5rem;
		text-align: left;
	}

	.title,
	.author,
	.publish-date {
		margin: 0;
	}

	.publish-date,
	.author {
		font-size: 1.25rem;
		color: var(--theme-text-lighter);
	}

	.title {
		font-size: 2.25rem;
		font-weight: 800;
		color: var(--theme-text);
	}

	@media (max-width: 760px) {

		.publish-date,
		.author {
			font-size: 1.05rem;
		}

		.title {
			font-size: 2rem;
		}
	}
</style>