<style>
	div {
		display: flex;
		flex-flow: column wrap;
	}
	a {
		width: 100%;
		margin: 0.5rem 0;
		padding: 2rem 1rem;
		background: var(--color-gray-50);
		box-shadow: var(--shadow-buena);
		border-radius: var(--br);

		display: flex;
		align-items: baseline;

		transition: border var(--transition-time) ease;

		border: 2px solid white;
		background: linear-gradient(white, white) padding-box,
			linear-gradient(
					to bottom right,
					rgba(var(--color-purple-rgb), 0.6),
					rgba(var(--color-purple-rgb), 0.2)
				)
				border-box;
	}
	a:hover {
		border: 2px solid transparent;
	}

	section {
		max-width: 100%;
		margin: 1rem 0;
		padding: 15px 0;
	}
	svg {
		margin: 0 1rem;
		transform: scale(2) !important;
	}
	a > svg:hover {
		background-color: transparent;
	}
	h5 {
		padding-left: 0.7rem;
		margin: auto 0;
	}
</style>


<style>
	:root {
		--ancho-muestras: 450px;
	}

	.contenedor {
		display: flex;
	}

	.vermas {
		width: 100%;
		text-align: center;
		padding-inline-start: 40px;
	}


	@media (max-width: 760px) {
		:root {
			--ancho-muestras: 100%;
		}

		.contenedor {
			flex-flow: column wrap;
		}

		.muestra {
			padding-inline-start: 0px;
		}
	}
</style>
