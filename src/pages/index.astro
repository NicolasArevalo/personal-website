<html lang="es">

<head>
	<BaseHead title={title} description={description} />

	<style>
		.content {
			margin-top: 1rem;
		}

		.intro {
			display: flex;
			flex-direction: column;
			align-items: center;
			padding-bottom: 2rem;
		}

		.intro>* {
			margin: 0;
		}

		h1 {
			text-align: center;
			padding-bottom: .5em;
		}

		ul {
			display: flex;
			flex-direction: row;
			flex-wrap: wrap;
			justify-content: space-between;
			width: max(60px, 300px);
		}

		li {
			list-style: none;
		}

		.yo {
			width: 200px;
			clip-path: circle(48% at 50% 50%);
		}

		.wrapper-navegacion {
			position: relative;
			display: flex;
			flex-direction: row;
			flex-wrap: wrap;
			width: 100%;
			gap: 1em;
			height: auto;
			align-items: center;
			justify-content: space-around;
			padding: 1em;
		}

		.hl {
			position: relative;
		}

		.hl::after {
			content: '';
			position: absolute;
			bottom: .2rem;
			left: 0;
			right: 0;
			width: 100%;
			height: 30%;
			background-color: rgba(var(--theme-accent-rgb), var(--theme-accent-opacity));
			z-index: -1;
			transition: height .3s;
			border-radius: var(--br);
		}

		.hl:hover::after {
			height: 70%;
		}

		@media(max-width: 760px) {
			.wrapper-navegacion {
				justify-content: center;
			}

			.yo {
				width: 150px;
			}

			.content {
				margin-top: 0rem;
			}
		}

		.wrapper-navegacion::after {
			content: '';
			border-radius: var(--br);
			z-index: -1;
			position: absolute;
			top: -.1em;
			bottom: 0;
			left: -.4em;
			right: 0;
			border: 3px ridge rgba(var(--theme-accent-rgb), var(--theme-accent-opacity));
			width: 100%;
			height: 100%;
			animation: beating 3s alternate .8s infinite;
		}

		@keyframes beating {

			100% {
				opacity: 0;
				transform: scaleX(1.05) scaleY(1.1);
			}
		}

		.wrapper-navegacion a {
			font-weight: bold;
		}

		.logo {
			width: 1rem;
			height: 1rem;
		}

		small {
			text-align: center;
			width: 100%;
		}

		.wrapper-fotos {
			margin-top: 3em;
		}
	</style>
</head>

<body>
	<!-- <Banner /> -->
	<NavBar />
	<div class="wrapper">
		<main class="content">
			<section class="intro">
				<img src={photo} class="yo" alt="Nicol√°s Ar√©valo">
				<h1 class="latest">{title}</h1>
				<p>{description} Me gusta: </p>
			</section>
		</main>
		<section class="wrapper-navegacion" aria-label="navegacion">

			<a href={links.blog} class="hl">Escribir</a>
			<!-- <a href={host+'/sobre-mi'} class="hl">Ver pel√≠culas</a> -->
			<a href={host+'/profesional'} class="hl">Crear p√°ginas web</a>
			<a href={host+'/voz'} class="hl">Rapear</a>
			<a href={host+'/contacto'} class="hl">Charlar</a>

		</section>
		<SobreMi />
		<!-- <LoNuevo /> -->
		<!-- <MiniBlogPrev /> -->
		<section class="wrapper-fotos" aria-label="">
			<h4>Fotos que he tomado...</h4>
			<Slider>
				<img class="slider__img sliding" src={img5} alt="">
				<img class="slider__img sliding" src={img7} alt="">
				<img class="slider__img sliding" src={img3} alt="">
				<img class="slider__img sliding" src={img8} alt="">
				<img class="slider__img sliding" src={img4} alt="">
				<img class="slider__img sliding" src={img11} alt="">
				<img class="slider__img sliding" src={img6} alt="">
				<img class="slider__img sliding" src={img2} alt="">
				<img class="slider__img sliding" src={img1} alt="">
				<img class="slider__img sliding" src={img9} alt="">
				<img class="slider__img sliding" src={img10} alt="">
			</Slider>
		</section>

	</div>
	<Footer />
</body>

</html>