---
import BaseHead from '@components/BaseHead.astro';
export interface Props {
    title?: string,
    description?: string,
    nombre: string, 
    link: string

}
const { title, description, nombre, link } = Astro.props
---
<html lang={'es'}>
	<head>
		<link
			rel='stylesheet'
			href='https://cdn.jsdelivr.net/npm/prism-themes@1.9.0/themes/prism-lucario.css'
		/>
		<BaseHead title={title} description={description} />
		<style>
			header {
				width: 100%;
				height: 100%;
				/* background-color: var(--theme-bg-offset); */
				display: flex;
				align-items: center;
				justify-content: center;
			}

			main {
				margin-top: 1rem;
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 1rem;
                height: 90vh;
                text-align: center;
			}
            h5{
                margin-bottom: 0!important;
            }
            footer{
                font-style: italic;
                color: rgb(153, 153, 153);
                width: 100%;
                text-align: center;
            }
            .solo_link{
                color: inherit;
                text-decoration: underline;
            }
		</style>
	</head>

	<body>
		<!-- <NavBar /> -->
		<main class='wrapper'>
            <slot />
            <!-- <h5><a href={link}>{nombre}</a></h5> -->
		</main>
        <footer>
            O regresa al <a class="solo_link" href="https://niiico.com">inicio</a>
        </footer>
		<!-- <Footer /> -->
	</body>
</html>
